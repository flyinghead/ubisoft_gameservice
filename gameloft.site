server {
	listen 80;

	root /usr/local/var/www/html;

	index index.html;

	server_name connect.gameloft.com;

	location / {
	  location /gameloft.php {
		if ($arg_version = POD2DC1.0) {
			rewrite /.* /pod.cfg;
		}
		if ($arg_version = MONDC1.0) {
			rewrite /.* /monaco.cfg;
		}
		if ($arg_version = SDDC1.0) {
			rewrite /.* /sdo.cfg;
		}
	  }

	  root /usr/local/ubisoft/cfg;
	  try_files $uri $uri/ =404;
	}
}
